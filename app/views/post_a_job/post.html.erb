<h1>Post a dog walking job</h1>

<body>
    <%= form_with url: 'post', method: :post do |f| %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="field">
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>

    <div class="field">
        <%= f.label :personality %>
        <%= f.text_field :personality %>
    </div>

    <div class="field">
        <%= f.label :payment %>
        <%= f.number_field :payment %>
    </div>

    <div class="field">
        <%= f.label :start_time %>
        <%= f.text_field :start_time %>
    </div>

      <div class="field">
        <%= f.label :duration %>
        <%= f.text_field :duration %>
    </div>

    <button>Post job</button>

<% end %>
</body>
